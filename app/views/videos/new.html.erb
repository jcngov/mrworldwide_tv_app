<%= form_for @video do |f| %>
<div>
  <%= f.label :title %>
  <%= f.text_field :title %>
</div>
  <br>
<div>
  <%= f.label :released_on %>
  <%= f.date_select :released_on, order: [:month, :day, :year] %>
</div>
  <br>
<div>
  <%= f.label :embed_url, "YouTube Id" %>
  <%= f.text_field :embed_url %>
</div>
  <br>
  <%= f.submit "Create" %>
<% end %>

<ul>
  <% @video.errors.full_messages.each do |message| %>
    <li><%= message %></li>
  <% end %>
</ul>
